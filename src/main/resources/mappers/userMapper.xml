<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bogus.bogusplus.user.dao.UserDAO">

	<insert id="insertUser" parameterType="map">
		INSERT INTO
			`user` 
		(
			`email`
			, `password`
			, `catalogue`
			, `icon`
			, `nickName`
			, `kid`
			, `manager`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{email}
			, #{password}
			, #{catalogue}
			, #{icon}
			, #{nickName}
			, #{kid}
			, 0
			, now()
			, now()
		)
	</insert>
	
	<select id="selectCountIsDuplicate" parameterType="String" resultType="int">
		SELECT
			count(1)
		FROM
			`user`
		WHERE
			`email` = #{email}
	</select>
	
	<select id="selectLastUser" resultType="com.bogus.bogusplus.user.model.User">
		SELECT
			`id`
		FROM
			`user`
		ORDER BY
			`id` DESC
		LIMIT
			1		
	</select>
	
	<update id="updatePin" parameterType="map">
		UPDATE
			`user`
		SET
			`pin` = #{pin}
			, updatedAt = now()
		WHERE
			 `id` = #{userId}
	</update>
	
</mapper>