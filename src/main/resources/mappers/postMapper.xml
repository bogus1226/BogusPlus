<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bogus.bogusplus.suda.cafe.post.dao.PostDAO">

	<insert id="insertPost" parameterType="map">
		INSERT INTO
			`post`
		(
			`userId`
			, `cafeId`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{userId}
			, #{cafeId}
			, #{imagePath}
			, #{content}
			, now()
			, now()
		)
	</insert>
	
	<select id="selectPostInfoList" parameterType="int" resultType="com.bogus.bogusplus.suda.cafe.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `cafeId`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`cafeId` = #{cafeId}
		ORDER BY
			`id`
		DESC
	</select>
	
	<delete id="deletePost" parameterType="int">
		DELETE
		FROM
			`post`
		WHERE
			`id` = #{id}
	</delete>
	
	<select id="selecetPostInfo" parameterType="int" resultType="com.bogus.bogusplus.suda.cafe.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `cafeId`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{id}
	</select>
	
</mapper>